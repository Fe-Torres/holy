    "capítulo": 0,
    "subtítulo": "",
    "versículo": 0,
    "texto": "",
    "livro": "",
    "sigla": "",
    "anotações": []
  },
  {
    "capítulo": 0,
    "subtítulo": "",
    "versículo": 0,
    "texto": "14 Espero, porém, em breve te ver, e *de* boca para boca falaremos.",
    "livro": "",
    "sigla": "",
    "anotações": []
  },
  {
    "capítulo": 0,
    "subtítulo": "",
    "versículo": 0,
    "texto": "",
    "livro": "",
    "sigla": "",
    "anotações": []
