  {
    "capítulo": 0,
    "subtítulo": "",
    "versículo": 0,
    "texto": "*Pecados e castigo de Edom. O dia do SENHOR: \njulgamento de todas as nações, restauração e bênção sobre Israel e Judá.*",
    "livro": "",
    "sigla": "",
    "anotações": []
  },
  {
    "capítulo": 0,
    "subtítulo": "",
    "versículo": 0,
    "texto": "",
